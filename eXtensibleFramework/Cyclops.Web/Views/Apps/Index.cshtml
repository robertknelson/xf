@model IEnumerable<Cyclops.Web.AppViewModel>

@{
    ViewBag.Title = "Applications";
}

<h2>Applications</h2>

<p>
    @Html.ActionLink("Add Application", "Create")
</p>
<table class="table">
    <tr>
        <th>
        </th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="~/apps/details/@item.AppId" class="glyphicon glyphicon-list-alt" />
        </td>
        <td>
            @if (item.IsFavorite)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.AppId)
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tags)
        </td>
        <td>
           
            @if (User.IsInRole("admin"))
            {
                <a href="~/apps/edit/@item.AppId " class="glyphicon glyphicon-pencil" />
            } 
            
                       
        </td>
        <td>
            @if (User.IsInRole("admin"))
            {
                <a href="~/apps/delete/@item.AppId" class="glyphicon glyphicon-remove"> </a>
            } 
        </td>
    </tr>
}

</table>



