                @Html.DropDownListFor(model => model.AppTypeId, appTypeList, new { htmlAttributes = new { @class = "form-control" } });
                @Html.ValidationMessageFor(model => model.AppType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
